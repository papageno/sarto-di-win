{
  "$id": "/etc/tattoo.config",
  "type": "object",
  "properties": {
    "registry": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^HK(LM|CU):\\\\(?:[^\\\\]+\\\\)*[^\\\\]*$"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "String",
              "ExpandString",
              "Binary",
              "DWord",
              "MultiString",
              "QWord"
            ]
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["path", "name", "type", "value"],
        "defaultSnippets": [
          {
            "body": {
              "path": "$1",
              "name": "$2",
              "type": "${3|String,ExpandString,Binary,DWord,MultiString,QWord|}",
              "value": "$4"
            }
          }
        ]
      }
    },
    "service": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "anyOf": [
              {
                "type": "string",
                "enum": ["WSearch"]
              },
              {
                "type": "string"
              }
            ]
          },
          "startup_type": {
            "type": "string",
            "enum": ["Boot", "System", "Automatic", "Manual", "Disabled"]
          }
        },
        "required": ["name", "startup_type"],
        "defaultSnippets": [
          {
            "body": {
              "name": "$1",
              "startup_type": "${2|Boot,System,Automatic,Manual,Disabled|}"
            }
          }
        ]
      }
    },
    "feature": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "enum": [
              "Containers-DisposableClientVM",
              "Microsoft-Hyper-V",
              "NetFx3",
              "NetFx4-AdvSrvs"
            ]
          },
          {
            "type": "string"
          }
        ]
      },
      "defaultSnippets": [
        {
          "body": ["$1"]
        }
      ]
    }
  },
